{
  "name": "test-config-extension",
  "displayName": "Test Configuration Extension",
  "description": "Example extension demonstrating configuration system",
  "version": "1.0.0",
  "publisher": "rainy-aether",
  "engines": {
    "rainy": "^1.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Test Extension Settings",
      "properties": {
        "testExtension.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the test extension features"
        },
        "testExtension.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for external service",
          "pattern": "^[a-zA-Z0-9]{32}$",
          "patternErrorMessage": "API key must be exactly 32 alphanumeric characters"
        },
        "testExtension.logLevel": {
          "type": "string",
          "enum": ["debug", "info", "warn", "error"],
          "enumDescriptions": [
            "Show all debug messages",
            "Show informational messages",
            "Show warnings only",
            "Show errors only"
          ],
          "default": "info",
          "description": "Logging verbosity level"
        },
        "testExtension.maxRetries": {
          "type": "integer",
          "default": 3,
          "minimum": 1,
          "maximum": 10,
          "description": "Maximum number of retry attempts for failed operations"
        },
        "testExtension.timeout": {
          "type": "number",
          "default": 5000,
          "minimum": 100,
          "maximum": 60000,
          "multipleOf": 100,
          "description": "Timeout for operations in milliseconds"
        },
        "testExtension.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["**/node_modules/**", "**/.git/**"],
          "description": "File patterns to exclude from processing"
        },
        "testExtension.customSettings": {
          "type": "object",
          "default": {
            "theme": "dark",
            "fontSize": 14
          },
          "description": "Custom settings object for advanced configuration"
        },
        "testExtension.webhookUrl": {
          "type": "string",
          "default": "",
          "editPresentation": "multilineText",
          "description": "Webhook URL for notifications (supports multiline input)"
        },
        "testExtension.experimentalFeatures": {
          "type": "boolean",
          "default": false,
          "description": "Enable experimental features (may be unstable)",
          "requiresRestart": true
        },
        "testExtension.deprecatedSetting": {
          "type": "string",
          "default": "old-value",
          "description": "This setting is deprecated",
          "deprecationMessage": "This setting will be removed in version 2.0. Use testExtension.newSetting instead."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0"
  }
}
