      "fileExtensions": [".rs"],
      "builtIn": false,
      "installation": {
        "type": "rustup",
        "component": "rust-analyzer",
        "command": "rust-analyzer",
        "args": [],
        "instructions": "Install with: rustup component add rust-analyzer"
      },
      "config": {
        "command": "rust-analyzer",
        "args": [],
        "initializationOptions": {
          "checkOnSave": {
            "command": "clippy"
          }
        }
      }
    },
    {
