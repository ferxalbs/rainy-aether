{
  "servers": [
    {
      "id": "typescript",
      "name": "TypeScript Language Server",
      "description": "TypeScript and JavaScript language server",
      "languages": ["typescript", "javascript", "typescriptreact", "javascriptreact"],
      "fileExtensions": [".ts", ".tsx", ".js", ".jsx", ".mjs", ".cjs"],
      "builtIn": true,
      "installation": {
        "type": "none",
        "instructions": "TypeScript support is built into Monaco Editor"
      }
    },
    {
      "id": "python",
      "name": "Python Language Server",
      "description": "Python language server (pylsp)",
      "languages": ["python"],
      "fileExtensions": [".py", ".pyi", ".pyw"],
      "builtIn": false,
      "installation": {
        "type": "pip",
        "package": "python-lsp-server[all]",
        "command": "pylsp",
        "args": [],
        "instructions": "Install with: pip install python-lsp-server[all]"
      },
      "config": {
        "command": "pylsp",
        "args": [],
        "initializationOptions": {}
      }
    },
    {
      "id": "pyright",
      "name": "Pyright Language Server",
      "description": "Fast Python type checker and language server",
      "languages": ["python"],
      "fileExtensions": [".py", ".pyi", ".pyw"],
      "builtIn": false,
      "installation": {
        "type": "npm",
        "package": "pyright",
        "command": "pyright-langserver",
        "args": ["--stdio"],
        "instructions": "Install with: npm install -g pyright"
      },
      "config": {
        "command": "pyright-langserver",
        "args": ["--stdio"],
        "initializationOptions": {}
      }
    },
    {
